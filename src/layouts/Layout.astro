---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="nordic">
  <head>
    <meta charset="utf-8" />
    <script is:inline>
      (function() {
        var t = localStorage.getItem("integra-theme");
        if (t === "nordic-dark" || (!t && matchMedia("(prefers-color-scheme: dark)").matches)) {
          document.documentElement.setAttribute("data-theme", "nordic-dark");
        }
      })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Compare car costs side-by-side with Canadian tax rates and financing options"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-base-200 transition-colors duration-200">
    <slot />
  </body>
</html>
